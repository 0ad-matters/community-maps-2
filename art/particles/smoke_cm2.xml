<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/smoke_64a.png</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="2.0"/>
    <uniform name="lifetime" min="14.0" max="16.0"/>

    <constant name="position.y" value="2.0"/>

    <uniform name="angle" min="-9.14" max="9.14"/>

    <uniform name="velocity.x" min="-0.3" max="0.3"/>
    <uniform name="velocity.y" min="2.0" max="2.5"/>
    <uniform name="velocity.z" min="-0.5" max="0.5"/>
    <uniform name="velocity.angle" min="-10.0" max="10.0"/>

    <uniform name="size" min=".25" max=".5"/>
	<constant name="size.growthRate" value="5.0"/>

    <uniform name="color.r" min="0.6" max="1.0"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
